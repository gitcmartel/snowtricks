{% extends 'base.html.twig' %}


{% block body %}
    <div class="site-section">
        <div class="container">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-md-10">
                    <div class="heading-39101 mb-5">
                        <span class="backdrop text-center">Reset Password</span>
                        <span class="subtitle-39191">Reset Password</span>
                        <h3>Reset Password</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 ml-auto"></div>
                <div class="col-lg-4 mb-5">
                    {{ form_start(resetPasswordForm) }}
                        <div class="form-group row">
                            <div class="mb-4 mb-3">
                                {{ form_label(resetPasswordForm.username, 'Username', {'label_attr': {'class': 'w-100 text-center mb-2'}})}}
                                {{ form_widget(resetPasswordForm.username, {'attr': {'class': "form-control"}})}}
                                <div class="text-danger">
                                    {{ form_errors(resetPasswordForm.username) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="mb-4 mb-3">
                                {{ form_label(resetPasswordForm.password, 'Username', {'label_attr': {'class': 'w-100 text-center mb-2'}})}}
                                {{ form_widget(resetPasswordForm.password, {'attr': {'class': "form-control"}})}}
                                <div class="text-danger">
                                    {{ form_errors(resetPasswordForm.password) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 mr-auto d-flex justify-content-center">
                                <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5"
                                    value="Reset">
                            </div>
                        </div>
                    {{ form_end(resetPasswordForm) }}
                </div>
                <div class="col-lg-4 ml-auto"></div>
            </div>
        </div>
    </div>
{% endblock %}
