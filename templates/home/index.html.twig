{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block importmap %}{{ importmap('home') }}{% endblock %}

{% block body %}

<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay">
        <div class="container">
            <div class="row catch-phrase">
                <div class="col-md-5">
                    <h1 class="mb-3 text-white">Snowtricks</h1>
                    <p>Du simple ollie aux doubles corks, chaque saut est une histoire. Rejoignez-nous pour explorer l'univers des figures de snowboard !</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scrolling buttons -->
<button id="scroll-button" class="scroll-button"><i class="fa-solid fa-circle-chevron-down fa-2xl" id="scroll-icon"></i></button>
<!-- End Scrolling buttons -->

<div class="site-section" id="postList">
    <div class="container">
        <div class="row justify-content-evenly">
            {% for tricks in tricksList %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="post-entry-1 h-100">
                        <a href="single.html">
                            <img src="{{ asset(tricks.image) }}" alt="Image" class="img-fluid">
                        </a>
                        <div class="post-entry-1-contents d-flex justify-content-between">
                            <h2><a href="single.html">{{ tricks.name }}</a></h2>
                            <div>
                                {% if is_granted('ROLE_USER') %}
                                <a href=""><i class="fa-solid fa-pencil me-3"></i></a>
                                <a href=""><i class="fa-solid fa-trash-can"></i></a>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
</div> <!-- END .site-section -->
{% endblock %}
    
{% block js %}

{% endblock %}