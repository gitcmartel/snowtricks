{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block importmap %}{{ importmap(['app', 'tricks']) }}{% endblock %}

{% block body %}
<form method="post" action="{{ path('app_tricks_edit', {'tricksId': tricks.id }) }}" enctype="multipart/form-data" id="formTricks">
    <!-- Hero -->
    <div class="ftco-blocks-cover-1">
        <div class="site-section-cover overlay" style="background-image: url('{{ asset(tricks.image) }}')" id="hero">
            <div class="tricks-edit-buttons-hero d-flex justify-content-end">
                <div class="edit-icons shadow d-flex justify-content-evenly">
                    <label for="tricksImage" role="button">
                        <i class="fa-solid fa-pencil me-4 edit-icons-color"></i>
                    </label>
                    <input type="file" accept=".png, .jpeg, .jpg, .svg" maxsize="2M" class="form-control d-none" name="tricksImage"
                        id="tricksImage" value="">
                    <div type="button" class="delete-hero-image" data-message="Confirmez-vous la suppression de l'image ?">
                        <i class="fa-solid fa-trash-can edit-icons-color"></i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row catch-phrase">
                    <div class="col-md-5">
                        <h1 class="mb-3 text-white">{{ tricks.name }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End hero -->

    <!-- Images and videos list -->
    <section>
        <div class="container-fluid">
            <div class="d-flex justify-content-center my-3 d-md-none position-relative z-index-3">
                <a class="btn btn-block btn-primary text-white py-3 px-5" id="seeMediasButton">
                    See medias
                </a>
            </div>
            <div class="row justify-content-evenly mt-4 d-none d-md-flex" id="mediaList">
                {% for media in tricks.medias %}
                <div class="col-lg-2 col-md-4 col-sm-6 mb-4 me-2 d-flex flex-column media-row" id="media{{ media.id }}">
                    <div class="media">
                        {% if media.type == "Image" %}
                        <img src="{{ asset(media.path) }}" alt="">
                        {% elseif media.type == "Video" %}
                        <video src="{{ asset(media.path) }}" controls>
                            <source src="{{ asset(media.path) }}" type="video/mp4">
                        </video>
                        {% endif %}
                    </div>
                    <div class="edit-buttons-container">
                        <div class="w-100 d-flex justify-content-end">
                            <div class="edit-icons-media d-flex justify-content-evenly">
                                <label for="tricksImage" role="button">
                                    <i class="fa-solid fa-pencil me-4 edit-icons-color"></i>
                                </label>
                                <input type="file" accept=".png, .jpeg, .jpg, .svg" maxsize="2M" class="form-control d-none" name="tricksImage"
                                id="tricksImage" value="">
                                <div type="button"  class="delete-media" data-media="{{ media.id }}" data-message="Confirmez-vous la suppression du media ?">
                                    <i class="fa-solid fa-trash-can edit-icons-color"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <div class="row">
                    <div class="col-lg-4">
                        <label for="{{ formTricks.medias.vars.id }}">
                            <i class="fa fa-plus"></i> {{ form_label(formTricks.medias) }}
                        </label>
                        {{ form_widget(formTricks.medias, {'attr': {'class': "form-control d-none"}} )}}
                        <ul id="fileList"></ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tricks description -->
    <section>
        <div class="container-fluid my-4">
            <div class="row">
                <div class="col-md-2 col-sm-1 col-0"></div>
                <div class="col-md-8 col-sm-10 col-12">
                    <div>
                        {{ form_widget(formTricks.name, {'attr': {'class': "form-control", 'placeholder': "Titre"}} )}}
                    </div>
                    <div class="my-4">
                        {{ form_widget(formTricks.description, {'attr': {'class': "form-control tricks-description", 
                    'placeholder': "Description"}} )}}
                    </div>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="tricks_form_tricks_group">Groups</label>
                                <select class="form-select" id="tricks_form_tricks_group" name="tricks_form[tricks_group]">
                                    {% for group in groups %}
                                    <option value="{{ group.id }}">{{ group.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-lg-end justify-content-center">
                        <div type="button" data-message="Confirmez-vous la suppression du tricks ?" class="delete-tricks btn btn-block btn-primary text-white py-3 px-5 me-3 deleteButton">
                            Delete
                    </div>
                        <button type="submit" class="btn btn-block btn-primary text-white py-3 px-5">Save</button>
                    </div>
                </div>
                <div class="col-md-2 col-sm-1 col-0">
                    
                </div>
            </div>           
        </div>
    </section>
    <!-- End tricks description -->

    <!-- User Modifications -->
    <section id="modifications">

    </section>
</form>
{% endblock %}